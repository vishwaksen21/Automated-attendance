# Environment Variables Configuration
# Copy this file to .env and fill in your values

# ==================== FILE PATHS ====================
TRAINING_IMAGE_PATH=./TrainingImage
TRAINING_LABEL_PATH=./TrainingImageLabel/Trainner.yml
STUDENT_DETAILS_PATH=./StudentDetails/studentdetails.csv
ATTENDANCE_PATH=./Attendance
FACE_CASCADE_PATH=./haarcascade_frontalface_default.xml

# ==================== FACE RECOGNITION ====================
# Confidence threshold for face recognition (0-100, lower is stricter)
CONFIDENCE_THRESHOLD=90

# Number of samples to capture during registration
NUM_SAMPLES=50

# Face detection scale factor (1.1-1.3 recommended)
FACE_DETECTION_SCALE=1.2

# Face detection minimum neighbors (3-6 recommended)
FACE_DETECTION_NEIGHBORS=5

# ==================== DATABASE ====================
MONGODB_URI=mongodb://localhost:27017/
DATABASE_NAME=attendance_system
COLLECTION_NAME=students

# ==================== API ====================
API_HOST=0.0.0.0
API_PORT=5000
DEBUG=False

# ==================== SECURITY ====================
# Generate a strong secret key for production
# Example: python -c "import secrets; print(secrets.token_urlsafe())"
SECRET_KEY=change-this-in-production-use-strong-key

# JWT token expiry time in seconds (3600 = 1 hour)
JWT_EXPIRY=3600

# Bcrypt log rounds (10-12 recommended, higher is slower but more secure)
BCRYPT_LOG_ROUNDS=12

# ==================== LOGGING ====================
LOG_LEVEL=INFO
LOG_DIR=./logs

# ==================== ENVIRONMENT ====================
# Options: development, production, testing
FLASK_ENV=development

# ==================== ADDITIONAL ====================
# Add any other environment variables here
# Example:
# EMAIL_HOST=smtp.gmail.com
# EMAIL_PORT=587
# EMAIL_USERNAME=your-email@gmail.com
# EMAIL_PASSWORD=your-app-password
